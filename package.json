{
  "name": "saltplay",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "analyse": "ANALYSE=true yarn build",
    "test": "jest --testPathPattern=/src/",
    "test:coverage": "jest --testPathPattern=/src/ --collect-coverage",
    "ts-check": "tsc --noEmit",
    "chakra-ts": "chakra-cli tokens --strict-component-types ./src/theme/theme.ts",
    "setup:env": "cp .env.development .env.local",
    "db:generate": "prisma generate",
    "db:migrate:forcepush": "prisma db push --accept-data-loss",
    "db:migrate:local": "dotenv -e .env.local prisma migrate dev --",
    "db:migrate:prev": "dotenv -e .env.preview prisma migrate deploy",
    "db:migrate:prod": "dotenv -e .env.production prisma migrate deploy",
    "prepare": "husky install",
    "postinstall": "yarn chakra-ts",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "start-server-and-test dev http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 cypress:headless"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.2.1",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11",
    "@next-auth/prisma-adapter": "^1.0.1",
    "@next/bundle-analyzer": "^12.1.6",
    "@prisma/client": "^3.15.2",
    "@radix-ui/colors": "^0.1.8",
    "@slack/web-api": "^6.5.1",
    "@uselessdev/datepicker": "^2.4.1",
    "axios": "^0.25.0",
    "cookie": "^0.4.1",
    "date-fns": "^2.27.0",
    "emoji-picker-react": "^3.5.1",
    "framer-motion": "^6.3.11",
    "jotai": "^1.6.5",
    "mixpanel-browser": "^2.45.0",
    "next": "^12.1.6",
    "next-auth": "^4.0.5",
    "next-connect": "^0.11.0",
    "nodemailer": "^6.7.2",
    "prisma": "^3.15.2",
    "qrcode.react": "^2.0.0",
    "ramda": "^0.27.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-focus-lock": "^2.8.1",
    "react-hook-form": "^7.22.5",
    "react-icons": "^4.3.1",
    "react-id-generator": "^3.0.2",
    "react-virtual": "^2.10.4",
    "slugify": "^1.6.5",
    "swr": "^1.1.1",
    "xstate": "^4.32.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^2.1.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/cookie": "^0.4.1",
    "@types/mixpanel-browser": "^2.38.0",
    "@types/node": "16.11.12",
    "@types/qrcode.react": "^1.0.2",
    "@types/ramda": "^0.27.62",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "babel-jest": "^27.4.5",
    "caniuse-lite": "^1.0.30001343",
    "cypress": "8.2.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "8.4.1",
    "eslint-config-next": "12.0.7",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-testing-library": "^5.5.1",
    "husky": "^7.0.4",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^12.3.1",
    "start-server-and-test": "1.13.1",
    "typescript": "^4.7.2",
    "unsplash-js": "^7.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run eslint --max-warnings 0 --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "rules": {
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
