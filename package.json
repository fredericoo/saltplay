{
  "name": "saltplay",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "ts-check": "tsc --noEmit",
    "chakra-ts": "chakra-cli tokens --strict-component-types ./src/theme/theme.ts",
    "db:generate": "prisma generate",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:local": "dotenv -e .env.local prisma migrate dev",
    "db:migrate:prev": "dotenv -e .env.preview prisma migrate deploy",
    "db:migrate:prod": "dotenv -e .env.production prisma migrate deploy",
    "prepare": "husky install",
    "postinstall": "yarn chakra-ts"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.3",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@next-auth/prisma-adapter": "^1.0.1",
    "@prisma/client": "^3.10.0",
    "@radix-ui/colors": "^0.1.8",
    "@slack/web-api": "^6.5.1",
    "axios": "^0.25.0",
    "cookie": "^0.4.1",
    "date-fns": "^2.27.0",
    "framer-motion": "^4",
    "next": "12.0.9-canary.3",
    "next-auth": "^4.0.5",
    "next-connect": "^0.11.0",
    "nodemailer": "^6.7.2",
    "prisma": "^3.10.0",
    "qrcode.react": "^2.0.0",
    "ramda": "^0.27.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.22.5",
    "react-icons": "^4.3.1",
    "react-id-generator": "^3.0.2",
    "react-virtual": "^2.10.4",
    "recoil": "^0.6.1",
    "swr": "^1.1.1",
    "three": "^0.138.3",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^1.7.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/cookie": "^0.4.1",
    "@types/node": "16.11.12",
    "@types/qrcode.react": "^1.0.2",
    "@types/ramda": "^0.27.62",
    "@types/react": "17.0.37",
    "babel-jest": "^27.4.5",
    "dotenv-cli": "^5.1.0",
    "eslint": "8.4.1",
    "eslint-config-next": "12.0.7",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.3.1",
    "typescript": "4.5.2",
    "unsplash-js": "^7.0.15",
    "vercel": "^24.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run eslint --max-warnings 0 --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "rules": {
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "type-empty": [
        2,
        "never"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
